<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- actionbar -->
    <style name="actionbar_title" parent="layout_ww">
        <item name="android:maxLength">10</item>
        <item name="android:paddingLeft">@dimen/actionbar_title_padding</item>
        <item name="android:paddingRight">@dimen/actionbar_title_padding</item>

        <item name="android:textSize">@dimen/actionbar_title_size</item>
    </style>

    <style name="layout_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="actionbar_icon">
        <item name="android:layout_width">@dimen/actionbar_default_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/actionbar_icon_paddingL</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>